@model IEnumerable<Testing0._1.Models.Nieuwsartikel>

@{
    ViewData["Title"] = "Index";
    int x = 0;
}

<h1>Events & News</h1>

<div class="container">
    <hr>
    <div class="row">
        <div class="col-lg-push-4 col-md-4 col-md-push-4">
            <div class="searchForm type2">
                <form action="" class="searchForm">
                    <!-- Add The Appropriate Action for Your Site's Search Form/Page -->
                    <label class="sr-only" for="searchNewsEvents">Search News and Events</label>
                    <input id="searchNewsEvents" name="q" placeholder="What do you need?" type="search"> <input type="submit" value="Search">
                </form>
                <p>
                    <a asp-action="Create">Create New</a>
                    <a asp-action="Index1">Index 1</a>
                </p>
            </div>
        </div>
    </div>
</div>
<hr>
<div class="card-group">
    @foreach (var item in Model)
    {
        if (x < 1)
        {
            <div class="row">
                <div class="card" style="width: 45rem; margin-left:15rem; margin-right:15rem;">
                    <img src="@Html.DisplayFor(modelItem => item.Artikelfoto)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titel)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.KorteOmschrijving)</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            x += 3;
        }
        else
        {
            <div class="card-group">
                <div class="card" style="width: 23rem; margin-left:auto; margin-right:auto;  margin-top:3rem; height:30rem;">
                    <img src="@Html.DisplayFor(modelItem => item.Artikelfoto)" class="card-img-top" alt="..." width="300" height="300">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titel)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.KorteOmschrijving)</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        }
    }
</div>




