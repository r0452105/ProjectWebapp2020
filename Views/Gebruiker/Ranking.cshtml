@model IEnumerable<Testing0._1.Models.Gebruiker>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Ranking
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationaliteit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 1; i++)
        {
            @foreach (var item in Model.OrderByDescending(i => i.Score))
            {
                i += 1;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voornaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nationaliteit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.GebruikerID">Meer Info</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
