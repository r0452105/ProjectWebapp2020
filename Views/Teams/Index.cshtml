@model IEnumerable<Testing0._1.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                Race
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="GebruikerTeam" asp-action="Details2" asp-route-id="@item.TeamID">@Html.DisplayFor(modelItem => item.Naam)</a>
            </td>
            <td>
                <a asp-controller="Race" asp-action="Details2" asp-route-id="@item.RaceID">@Html.DisplayFor(modelItem => item.Race.Naam)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeamID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
